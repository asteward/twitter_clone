<h2>Log In</h2>

<%= form_tag sessions_path do %>
  <div class="form-group">
          <%= label_tag :username %>
          <%= text_field_tag :username, params[:username] %>
  </div>
  <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Log In", class: "btn btn-primary" %>
<% end %>
